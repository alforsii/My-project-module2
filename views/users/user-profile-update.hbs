<div class="container">
    <h2 class="text-center">Profile update</h2>
    <div class="row">

        <div class="col-md-6 m-auto">

            <div class="error-message">{{ message }}</div>
            <div class="success-message">{{ success }}</div>

            <form action="/profile/profile-update" method="post">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" name="username" value="{{username}}" class="form-control">
                </div>

                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" name="firstName" value="{{firstName}}" class="form-control">
                </div>

                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" name="lastName" value="{{lastName}}" class="form-control">
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" value="{{email}}" class="form-control">
                </div>

                <div class="form-group">
                    <label for="password">Old password</label>
                    <input type="password" name="password" class="form-control" placeholder="**********">
                </div>

                <div class="form-group">
                    <label for="password1">New password</label>
                    <input type="password" name="password1" class="form-control" placeholder="**********">
                </div>
                <div class="form-group">
                    <label for="password2">Confirm new password</label>
                    <input type="password" name="password2" class="form-control" placeholder="**********">
                </div>

                <button class=" col-md-12 m-auto" type="submit">
                    Save Updates
                    <i class="fas fa-cloud-upload-alt"></i>
                </button>
            </form>
            <form action="/profile/delete-account" method="POST">
                <button class="btn btn-primary col-md-12 mt-2 mb-3">
                    Delete Account
                    <i class="fas fa-cloud-download-alt"></i>
                </button>
            </form>

        </div>
    </div>
</div>