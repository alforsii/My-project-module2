<div id="main-profile">
  <div class="left-div profile-boxes">
    <div id="user-profile">
      <h5>{{firstName}} {{lastName}} </h5>
      <img class="user-image profile-image" src="{{path}}" alt="{{username}}">
      <a class="btn btn-secondary mb-0 mt-2" href="">Send message</a>
      <a class="btn btn-secondary mb-0 mt-2" href="">Add to friends</a>
    </div>
    <div id="user-friends-list" class="friends-list">
      <div id="friends-header">
      </div>

      <div class="friends-header-title">
        <a class="username">
          {{firstName}}'s Friends
        </a>
        <div class="dropdown">
          <button class="dropbtn">...</button>
        </div>
      </div>
      {{!-- user friends list - each friend --}}
      {{#each userFriends}}
      <div class="each-friend">
        <div class="user-friend">
          <a href="">
            <img class="chat-users-small" src="{{this.path}}" alt="{{this.username}}">
          </a>
          <a href="/profile/user-details?user_id={{this.userId}}" class="username" _id="{{this.userId}}"
            friendId="{{this._id}}" _username="{{this.username}}">
            {{this.firstName}} {{this.lastName}}
          </a>
        </div>
      </div>
      {{/each}}
      {{!-- end user friends list --}}
    </div>
  </div>
  {{!-- --------------------------------------------------------------- --}}
  <div class="center-div profile-boxes">
    {{#if posts}}
    <h2>User Posts!</h2>
    <div class="column-items">

      {{#each posts}}
      {{!-- this div column-reversed from style.css --}}
      <div class="card mb-2">
        <div class="author-info">
          <a href="/profile/user-details?user_id={{this.userId}}">
            <img class="users-small" src="{{this.path}}" alt="{{this.username}}">
          </a>
          <a href="/profile/user-details?user_id={{this.userId}}"> {{this.firstName}} {{this.lastName}}</a>
        </div>
        <div class="profile-user-box">
          {{!-- <span>{{this.picName}}</span> --}}
          <a href="/posts/post-details?post_id={{this._id}}">
            <img class="profile-post-image" src="{{this.picPath}}" alt="{{this.picName}}">
          </a>
        </div>
      </div>
      {{/each}}

    </div>
    {{else}}
    <h2>User has no Posts</h2>
    {{/if }}
  </div>

  {{!-- ---------------------------------------------- --}}
  <div id="weatherMain" class="weather-div">
    {{> weather}}
    {{!-- {{> footer}} --}}
  </div>

  {{!-- ---------------------------------------------------------------------------- --}}


  <div class="right-div profile-boxes">
    <input id="search-user1" class="form-control search-user" style="position: fixed; z-index:3;" type="text"
      placeholder="Search...">
    <div class="all-users">
      {{> usersList}}
    </div>
  </div><!-- end right div-->

</div>

