<div id="main-profile">
  <div class="left-div">
    <div id="user-profile">
      <h5 class="text-center">{{firstName}} {{lastName}} </h5>
      <div class="crop-user-image">
        <img class="user-image profile-image" src="{{path}}" alt="{{username}}">
      </div>
      <a class="btn btn-secondary send-message mb-0 mt-2" href="" user_id={{_id}} _username={{username}}
        _name="{{firstName}} {{lastName}}">Send
        message</a>

      {{#if isFriend}}
      <a class="btn btn-primary delete-friend text-center" friendId="{{this.userFriendId}}"> Remove friend
      </a>
      {{else}}
      <a class="btn btn-secondary add-friend text-center" user_id={{this._id}} _username={{this.username}}>Add to
        friends</a>
      {{/if}}

    </div>
    <div id="user-friends-list" class="friends-list">
      <div class="friends-header-title">
        <a class="username">
          {{firstName}}'s Friends
        </a>

