<div class="main-post-details">
    <a class="goHome" href="/profile/user-page">Go back</a>
    <div class="col-md-6 m-auto">
        <div class="form">
            <img class="image-details" src="{{picPath}}" alt="{{picName}}">
            <p>{{content}}</p>
            <div> <span>Author: <a href="/profile/user-details?user_id={{userId}}">{{firstName}}</a></span>
                <img class="users-small" src="{{userImg}}" alt="username"></div>
            <p><a href="/comments/post-details/comments?post_id={{postId}}">Comments</a> </p>

            {{#if message}}
            <div class="error-message">{{ message }}</div>
            {{/if}}

            {{#if user}}
            <form action="/comments/post-details?post_id={{postId}}" method="post">
                <input name="comment" id="" cols="30" rows="3"></input>
                <button>Comment</button>
            </form>
            {{/if}}

            {{!-- drop down button --}}
            {{#if isCreator}}
            <form id="post-delete-btn" action="/posts/delete-post?post_id={{postId}}" method="post">
                <button class="btn btn-primary">Delete Post</button>
            </form>
            {{/if}}
            {{!-- end drop down button --}}
        </div>
    </div>
</div>