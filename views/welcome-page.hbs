{{!-- Welcome Page Container --}}
<div class="welcome-page-container">
  <div>
    <h1>Welcome to Ironbook!</h1>
    <h3>Join, connect and share your memories.</h3>
    <h4><i class="fas fa-users fa-fw"></i>Connect with friends</h4>
    <h4><i class="fas fa-comments fa-fw"></i>Chat with friends</h4>
    <h4><i class="fas fa-share-square fa-fw"></i>Share memories</h4>
  </div>

  {{!-- Sign up form --}}
  <div class="form col-md-6">
    <form action="/auth/signup" method="post">
      <h1><i class="fas fa-user-plus mr-3" style="color: #2e9cca;"></i>Sign up</h1>
      <div class="error-message">{{ message }}</div>
      <label class="mb-0 mt-2" for="username">Username</label>
      <input type="text" name="username" class="form-control">


      <label class="mb-0 mt-2" for="firstName">First Name</label>
      <input type="text" name="firstName" class="form-control">


      <label class="mb-0 mt-2" for="lastName">Last Name</label>
      <input type="text" name="lastName" class="form-control">


      <label class="mb-0 mt-2" for="email">Email</label>
      <input type="email" name="email" class="form-control">


      <label class="mb-0 mt-2" for="password">Password</label>
      <input type="password" name="password" class="form-control" placeholder="**********">

      <button class="btn btn-primary mt-3 mb-2" type="submit">Signup</button>

      <p>
        Already have an account?
        <a href="/auth/login">Login</a>
      </p>
    </form>
  </div>
  {{!-- End of Sign Up form --}}
</div>
{{!-- End of Welcome Page Container --}}
